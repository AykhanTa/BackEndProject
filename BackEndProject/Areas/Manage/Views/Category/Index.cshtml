@model IEnumerable<Category>


<h1 class="h3 mb-2 text-gray-800">Categories Table</h1>

<a class="btn btn-primary mt-4 mb-4" href="/manage/category/create">Create a category</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">CreateDate</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@category.Name</td>
                <td>@category.CreateDate.ToString("MM/dd/yyyy")</td>
                <td>
                    <a class="btn btn-secondary" href="/manage/category/update/@category.Id">update</a>
                    <a class="btn btn-secondary" href="/manage/category/delete/@category.Id">delete</a>
                    <a class="btn btn-secondary" href="/manage/category/detail/@category.Id">detail</a>
                </td>
            </tr>

        }
    </tbody>
</table>