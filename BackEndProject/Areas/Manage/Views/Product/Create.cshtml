@model Product

<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter product name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter product description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter product price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Count"></label>
        <input asp-for="Count" class="form-control" placeholder="Enter product count">
        <span class="text-danger" asp-validation-for="Count"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExTax"></label>
        <input asp-for="ExTax" class="form-control" placeholder="Enter product count">
        <span class="text-danger" asp-validation-for="ExTax"></span>
    </div>
    <div class="form-group">
        <label asp-for="MainPhoto"></label>
        <input accept="image/*" asp-for="MainPhoto" class="form-control" >
        <span class="text-danger" asp-validation-for="MainPhoto"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photos"></label>
        <input accept="image/*" asp-for="Photos" class="form-control">
        <span class="text-danger" asp-validation-for="Photos "></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId">
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="ColorIds"></label>
        <select asp-for="ColorIds">
            @foreach (var color in ViewBag.Colors)
            {
                <option value="@color.Id">@color.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="ColorIds"></span>
    </div>
    <div class="form-group">
        <label asp-for="SizeIds"></label>
        <select asp-for="SizeIds">
            @foreach (var size in ViewBag.Sizes)
            {
                <option value="@size.Id">@size.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="SizeIds"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>