@model IEnumerable<Product>

<h1 class="h3 mb-2 text-gray-800">Products Table</h1>

<a class="btn btn-primary mt-4 mb-4" href="/manage/product/create">Create a product</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">DiscountPrice</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>
                    <img width="100" height="100" src="~/assets/img/product/@product.MainImage" alt="@product.Name" />
                </td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.DiscountPrice</td>
                <td>
                    <a class="btn btn-secondary" href="/manage/product/update/@product.Id">update</a>
                    <a class="btn btn-secondary" href="/manage/product/delete/@product.Id">delete</a>
                    <a class="btn btn-secondary" href="/manage/product/detail/@product.Id">detail</a>
                </td>
            </tr>

        }
    </tbody>
</table>