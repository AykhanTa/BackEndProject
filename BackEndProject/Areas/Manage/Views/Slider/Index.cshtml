@model IEnumerable<Slider>

<h1 class="h3 mb-2 text-gray-800">Sliders Table</h1>

<a class="btn btn-primary mt-4 mb-4" href="/manage/slider/create">Create a slider</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Subtitle</th>
            <th scope="col">Description</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
       @foreach (var slider in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>
                    <img width="100" height="100" src="~/assets/img/slider/@slider.Image" alt="@slider.Title" />
                </td>
                <td>@slider.Title</td>
                <td>@slider.SubTitle</td>
                <td>@slider.Description</td>
                <td>
                    <a class="btn btn-secondary" href="/manage/slider/update/@slider.Id">update</a>
                    <a class="btn btn-secondary" href="/manage/slider/delete/@slider.Id">delete</a>
                    <a class="btn btn-secondary" href="/manage/slider/detail/@slider.Id">detail</a>
                </td>
            </tr>

        }
    </tbody>
</table>